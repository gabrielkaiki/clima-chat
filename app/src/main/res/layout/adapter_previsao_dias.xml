<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_clima"
    android:elevation="5dp"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageClimaAdapter"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/ensolarado" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="5dp">

            <TextView
                android:id="@+id/textDateAdapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/data"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="date" />

            <TextView
                android:id="@+id/textWeekdayAdapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/dia_semana"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="weekday" />

            <TextView
                android:id="@+id/textMaxAdapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/up"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="max" />

            <TextView
                android:id="@+id/textMinAdapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/down"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="min" />

            <TextView
                android:id="@+id/textDescricaoAdapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/description"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="description" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>